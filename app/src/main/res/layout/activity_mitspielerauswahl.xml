<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vintagetechnologies.menschaergeredichnicht.Mitspielerauswahl">

    <TextView
        android:id="@+id/textView_mitspieler_titel"
        android:layout_width="222dp"
        android:layout_height="83dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/TXTtitelMitspielerwahl"
        android:textAlignment="textStart"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp" />

    <ListView
        android:layout_width="263dp"
        android:layout_height="212dp"
        android:clickable="true"
        android:entries="namen"
        android:scrollbars="horizontal"
        android:id="@+id/listView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView_online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TXTonline"
        app:layout_constraintBottom_toTopOf="@+id/listView"
        app:layout_constraintLeft_toLeftOf="@+id/listView" />

    <TextView
        android:id="@+id/textView_spielerauswahl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TXTspielerauswahl"
        app:layout_constraintRight_toRightOf="@+id/listView"
        app:layout_constraintBottom_toTopOf="@+id/listView" />

    <Button
        android:id="@+id/BTN_spielstarten"
        android:layout_width="162dp"
        android:layout_height="52dp"
        android:text="@string/TXTspielstarten"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/BTN_info"
        android:layout_width="44dp"
        android:layout_height="39dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:background="@android:color/background_light"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_info_details" />

</android.support.constraint.ConstraintLayout>
